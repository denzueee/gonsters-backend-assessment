# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=CHANGE_ME_SECRET_KEY

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gonsters_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# InfluxDB Configuration (App Connection)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=CHANGE_ME_INFLUX_TOKEN
INFLUXDB_ORG=gonsters
INFLUXDB_BUCKET=sensor_data
INFLUXDB_RETENTION_WEEKS=52

# InfluxDB Docker Init (Used only during container creation)
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=adminpassword
DOCKER_INFLUXDB_INIT_ORG=gonsters
DOCKER_INFLUXDB_INIT_BUCKET=sensor_data
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=CHANGE_ME_INFLUX_TOKEN

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC=factory/+/machine/+/telemetry
MQTT_QOS=1
MQTT_CLIENT_ID=gonsters-backend-001

# JWT Authentication
JWT_SECRET_KEY=CHANGE_ME_JWT_KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000
